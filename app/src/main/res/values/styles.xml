<resources>

    <style name="Theme.AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
            <!-- Setting values in the default namespace affects API levels 7-13 -->
        <!-- <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>-->
        <!--<item name="android:buttonStyle">@style/standart_button</item>-->

        <item name="buttonStyle">@style/standart_button</item>
        <item name="android:buttonStyleToggle">@style/toogle</item>

        <item name="colorPrimary">@color/sendDarkColor</item>
        <item name="colorPrimaryDark">@color/sendLightColor</item>
        <item name="colorAccent">@color/sendDarkColor</item>
        <item name="android:windowBackground">@color/sendLightColor</item>


    </style>

    <style name="toogle" parent="android:Widget.Button.Toggle">

    </style>

    <style name="standart_button" parent="android:Widget.Button">
        <item name="android:background">@drawable/standart_button</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Widget.Styled.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">

    </style>

    <style name="smallRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/small_rating_bar</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>
    <style name="mediumRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/medium_rating_bar</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>


</resources>
