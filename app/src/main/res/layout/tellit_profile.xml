<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/listViewBg"
    tools:context=".ui.activitys.autorithation.Profile">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/im_profile_img"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitCenter"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/im_enter_first"
            android:id="@+id/textView6"
            android:layout_margin="10dp" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/im_profile_first"
        android:layout_gravity="center_horizontal"
        android:hint="First Name"
        android:layout_margin="10dp"
        android:maxLength="10" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/im_profile_last"
        android:layout_gravity="center_horizontal"
        android:hint="Last Name"
        android:layout_margin="10dp"
        android:maxLength="10" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/im_profile_btn"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp" />
</LinearLayout>